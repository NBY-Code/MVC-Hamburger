@{
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
@model List<AppUser>
<form>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col"><font color="white">User Name</font></th>
                <th scope="col"><font color="white">Email</font></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><font color="white">@item.UserName</font></td>
                    <td><font color="white">@item.Email</font></td>
                    <td><button class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id">Update</button></td>
                    <td><button class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>
